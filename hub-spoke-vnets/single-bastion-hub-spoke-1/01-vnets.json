                "subnet1Name": "subnet1",
                "subnet1Prefix": "10.0.1.0/25"
            }
        },
        "spoke2": {
            "type": "object",
            "defaultValue": {
                "location": "[parameters('locationspoke2')]",
                "name": "spoke2",
                "addressPrefix": "10.0.2.0/24",
                "subnet1Name": "subnet1",
                "subnet1Prefix": "10.0.2.0/25"
            }
        },
        "hub2": {
            "type": "object",
